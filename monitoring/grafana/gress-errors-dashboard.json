{
  "dashboard": {
    "title": "Gress Stream Processing - Error Handling",
    "tags": ["gress", "errors", "reliability"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "id": 1,
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 8,
          "h": 8
        },
        "type": "stat",
        "title": "Total Errors",
        "targets": [
          {
            "expr": "sum(rate(gress_operator_errors_total[5m]))",
            "legendFormat": "Errors/sec",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "ops",
            "decimals": 2,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 0.1,
                  "color": "yellow"
                },
                {
                  "value": 1,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "gridPos": {
          "x": 8,
          "y": 0,
          "w": 8,
          "h": 8
        },
        "type": "stat",
        "title": "Retry Success Rate",
        "targets": [
          {
            "expr": "sum(rate(gress_retry_successes_total[5m])) / (sum(rate(gress_retry_successes_total[5m])) + sum(rate(gress_retry_failures_total[5m])))",
            "legendFormat": "Success Rate",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "red"
                },
                {
                  "value": 0.8,
                  "color": "yellow"
                },
                {
                  "value": 0.95,
                  "color": "green"
                }
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "gridPos": {
          "x": 16,
          "y": 0,
          "w": 8,
          "h": 8
        },
        "type": "stat",
        "title": "DLQ Size",
        "targets": [
          {
            "expr": "sum(gress_dlq_size_events)",
            "legendFormat": "Events",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": null,
                  "color": "green"
                },
                {
                  "value": 100,
                  "color": "yellow"
                },
                {
                  "value": 1000,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 12,
          "h": 9
        },
        "type": "graph",
        "title": "Errors by Operator",
        "targets": [
          {
            "expr": "rate(gress_operator_errors_total[5m])",
            "legendFormat": "{{operator}} - {{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Errors/sec"
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "current": true,
          "max": true
        }
      },
      {
        "id": 5,
        "gridPos": {
          "x": 12,
          "y": 8,
          "w": 12,
          "h": 9
        },
        "type": "graph",
        "title": "Retry Attempts vs Successes",
        "targets": [
          {
            "expr": "sum(rate(gress_retry_attempts_total[5m]))",
            "legendFormat": "Attempts",
            "refId": "A"
          },
          {
            "expr": "sum(rate(gress_retry_successes_total[5m]))",
            "legendFormat": "Successes",
            "refId": "B"
          },
          {
            "expr": "sum(rate(gress_retry_failures_total[5m]))",
            "legendFormat": "Failures",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Rate"
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 6,
        "gridPos": {
          "x": 0,
          "y": 17,
          "w": 12,
          "h": 8
        },
        "type": "graph",
        "title": "Circuit Breaker State",
        "targets": [
          {
            "expr": "gress_circuit_breaker_state",
            "legendFormat": "{{circuit_name}} (0=closed, 1=open, 2=half-open)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "State",
            "min": 0,
            "max": 2
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 0,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "current": true
        },
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0.5],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "avg"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "name": "Circuit Breaker Open",
          "noDataState": "no_data",
          "message": "Circuit breaker is open or half-open"
        }
      },
      {
        "id": 7,
        "gridPos": {
          "x": 12,
          "y": 17,
          "w": 12,
          "h": 8
        },
        "type": "graph",
        "title": "Circuit Breaker Requests",
        "targets": [
          {
            "expr": "rate(gress_circuit_breaker_requests_total[5m])",
            "legendFormat": "{{circuit_name}} - {{result}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Requests/sec"
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "current": true
        }
      },
      {
        "id": 8,
        "gridPos": {
          "x": 0,
          "y": 25,
          "w": 12,
          "h": 8
        },
        "type": "graph",
        "title": "DLQ Activity",
        "targets": [
          {
            "expr": "rate(gress_dlq_events_written_total[5m])",
            "legendFormat": "Written - {{dlq_name}}",
            "refId": "A"
          },
          {
            "expr": "rate(gress_dlq_events_read_total[5m])",
            "legendFormat": "Read - {{dlq_name}}",
            "refId": "B"
          },
          {
            "expr": "rate(gress_dlq_events_deleted_total[5m])",
            "legendFormat": "Deleted - {{dlq_name}}",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Events/sec"
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2
      },
      {
        "id": 9,
        "gridPos": {
          "x": 12,
          "y": 25,
          "w": 12,
          "h": 8
        },
        "type": "graph",
        "title": "Retry Backoff Time",
        "targets": [
          {
            "expr": "histogram_quantile(0.50, sum(rate(gress_retry_backoff_seconds_bucket[5m])) by (le, operator))",
            "legendFormat": "P50 - {{operator}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.99, sum(rate(gress_retry_backoff_seconds_bucket[5m])) by (le, operator))",
            "legendFormat": "P99 - {{operator}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "s",
            "label": "Backoff Duration"
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 0,
        "linewidth": 2
      },
      {
        "id": 10,
        "gridPos": {
          "x": 0,
          "y": 33,
          "w": 24,
          "h": 8
        },
        "type": "graph",
        "title": "Errors by Category",
        "targets": [
          {
            "expr": "rate(gress_errors_by_category_total[5m])",
            "legendFormat": "{{operator}} - {{category}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Errors/sec"
          },
          {
            "format": "short"
          }
        ],
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "current": true,
          "max": true,
          "sortDesc": true
        }
      }
    ],
    "templating": {
      "list": []
    },
    "time": {
      "from": "now-1h",
      "to": "now"
    }
  }
}
